<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">From the blog</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">An Aussie living in France.</p>
    </div>
    <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <% @blog_posts.each do |blog_post| %>
        <article class="flex max-w-xl flex-col items-start justify-between">
            <% if blog_post.draft? %>
              <div><p class="p-2 rounded bg-gray-100 text-gray-400">Draft</p></div>
            <% elsif blog_post.published? && user_signed_in? %>
              <div><p class="p-2 rounded bg-green-100 text-green-400">Published</p></div>
            <% elsif blog_post.scheduled? && user_signed_in? %>
              <div><p class="p-2 rounded bg-blue-100 text-blue-400">Scheduled</p></div>
            <% end %>
            <%= link_to blog_post_path(blog_post) do %>
              <div class="group relative">
                <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                  <span class="absolute inset-0"></span>
                  <%= blog_post.title %>
                </h3>
                <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= blog_post.content %></p>
              </div>
              <div class="relative mt-8 flex items-center gap-x-4">
                <%= image_tag "F.png", class: "h-10 w-10 rounded-full bg-gray-50" %>
                <div class="text-sm leading-6">
                  <p class="font-semibold text-gray-900">
                    <span class="absolute inset-0"></span>
                    Elo√Øse Pividori
                  </p>
                  <p class="text-gray-600">Co-Founder / CTO</p>
                </div>
              </div>
            <% end %>
        </article>
      <% end %>

    </div>
    <div class="mt-16 py-6"><%#= render_svg "icons/plus" %><%= link_to "New Blog Post", new_blog_post_path if user_signed_in? %></div>
  </div>
</div>
