<%= turbo_stream_from "blog_posts" %>

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">From the blog</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">An Aussie living in France.</p>
        <div class="mt-3 py-6">
          <%= link_to "New Blog Post",
                      new_blog_post_path,
                      data: { turbo_frame: dom_id(BlogPost.new) } %>
      </div>

      <%= turbo_frame_tag BlogPost.new %>

      <%= turbo_frame_tag "blog_posts" do %>
        <%= render @blog_posts %>
      <% end %>
    </div>
  </div>
</div>
